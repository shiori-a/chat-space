.header
  
.wrapper
  .chat-side
    = render "devise/shared/side_bar"
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group test-group
        %p.main-header__left-box__members  Member : 
        %p.main-header__left-box__member  test-user
      .right-header
        .right-header__button Edit
    .messages
      .message
        .message__info
          %p.message__info__user-name test-user
          %p.message__info__date 2019/07/01(Mon) 12:00:00
        .lower-message
          %p.lower-message__content こんにちわ！
    .form
      .input-box
        %input.input-box__text{placeholder: "type a message", type: "text"}/
        %label.input-box__image{for: "upload-icon"}
          %i.fa.fa-image
      %input.submit-btn{type: "submit", value: "Send"}
