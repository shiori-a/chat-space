.header
  
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__name test-user
        .side-header__box__icon
        =link_to "/users/#{current_user.id}/edit" do
          %i.fa.fa-edit
        =link_to "#" do
          %i.fa.fa-cog
    .groups
      .group
        %h2.group-name test-user
        %p.message さようなら
  .chat-main
    .main-header
      .main-header__left-box
        %h1.main-header__left-box__current-group test-group
        %p.main-header__left-box__member Member: test-user
        .main-header__edit Edit
    .messages
      .message
        .message__info
          %p.message__info__talker test-user
          %p.message__info__date 2019/07/01(Mon) 12:00:00
        %p.message__text こんにちわ！
    .form
      .input-box
        %input.input-box__text{placeholder: "type a message", type: "text"}/
        %label.input-box__image{for: "upload-icon"}
          %i.fa.fa-image
      %input.submit-btn{type: "submit", value: "Send"}
